{
  "name": "polyglot-starter",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "app",
    "web",
    "proxy"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "postinstall": "node scripts/install-vendored-tsconfig.cjs",
    "check:repo": "bash scripts/checks.sh",
    "prepare": "husky"
  },
  "devDependencies": {
    "@ljharb/tsconfig": "file:vendor/@ljharb/tsconfig",
    "eslint": "^8.50.0",
    "@babel/core": "^7.28.4",
    "@babel/eslint-parser": "^7.28.4",
    "@babel/preset-react": "^7.22.5",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "grunt": "^1.6.1",
    "grunt-cli": "^1.5.0",
    "grunt-contrib-jshint": "^3.2.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,mjs}": [
      "pnpm -w exec eslint --fix",
      "git add"
    ]
  }
}
